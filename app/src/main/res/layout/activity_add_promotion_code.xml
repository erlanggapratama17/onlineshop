<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddPromotionCodeActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_rec01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_back_white"/>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Tambah Kode Promosi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>



    </RelativeLayout>

    <ImageView
        android:id="@+id/imageIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/toolbarRl"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/promotion"/>

    <EditText
        android:id="@+id/promoCodeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageIv"
        android:layout_margin="5dp"
        android:background="@drawable/shapre_rec02"
        android:drawableStart="@drawable/ic_discount_gray"
        android:drawablePadding="5dp"
        android:hint="Kode Promosi"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:textColor="@color/colorBlak"
        android:textColorLink="@color/colorGray01"/>

    <EditText
    android:id="@+id/promoDescriptionEt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/promoCodeEt"
    android:layout_margin="5dp"
    android:background="@drawable/shapre_rec02"
    android:drawableStart="@drawable/ic_discount_gray"
    android:drawablePadding="5dp"
    android:hint="Deskripsi Promosi"
    android:inputType="textCapSentences|textMultiLine"
    android:padding="10dp"
    android:textColor="@color/colorBlak"
    android:textColorLink="@color/colorGray01"/>

    <EditText
        android:id="@+id/promoPriceEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promoDescriptionEt"
        android:layout_margin="5dp"
        android:background="@drawable/shapre_rec02"
        android:drawableStart="@drawable/ic_uang_gray"
        android:drawablePadding="5dp"
        android:hint="Harga Promo"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/colorBlak"
        android:textColorLink="@color/colorGray01"/>

    <EditText
        android:id="@+id/minimumOrderPriceEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promoPriceEt"
        android:layout_margin="5dp"
        android:background="@drawable/shapre_rec02"
        android:drawableStart="@drawable/ic_min_gray"
        android:drawablePadding="5dp"
        android:hint="Minimum Pesan"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/colorBlak"
        android:textColorLink="@color/colorGray01"/>

    <TextView
        android:id="@+id/expireDateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/minimumOrderPriceEt"
        android:layout_margin="5dp"
        android:background="@drawable/shapre_rec02"
        android:drawableStart="@drawable/ic_calendar_gray"
        android:drawablePadding="5dp"
        android:hint="Gunakan Sebelum"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/colorBlak"
        android:textColorLink="@color/colorGray01"/>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expireDateTv"
        android:layout_centerHorizontal="true"
        android:minWidth="150dp"
        android:text="Tambah"
        android:background="#495DEF"
        style="@style/Widget.AppCompat.Button.Colored"/>

</RelativeLayout>